<div class="author">
  <h1 class="author__heading">Blog Posts </h1>

</div>

<section class="articles">
  <ul class="article-ul">
    <% data.forEach(post=> { %>
      <li>
        <a href="/category/<%= post.category._id %>" class="article-ul__category">
          <%= post.category.name %>
        </a>
        <a href="/post/<%= post._id%>">
          <div class="article-ul__title">
            <p>
              <%= post.title %>
            </p>
          </div>
          <span class="article-list__date">
            <%= post.createdAt.toDateString() %>
          </span>
        </a>
      </li>
      <% })%>
  </ul>
</section>