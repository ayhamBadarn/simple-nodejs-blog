<a href="/admin/categories">
  &larr; Back
</a>

<div class="admin-title">
  <h2>View / Edit Category</h2>

  <form action="/admin/delete-category/<%=category._id%>?_method=DELETE" method="post">
    <button type="submit" class="btn btn-delete">Delete</button>
  </form>
</div>

<form method="post" action="/admin/edit-category/<%=category._id%>?_method=PUT">

  <label for="name"><b>Name</b></label>
  <input type="text" id="name" name="name" placeholder="Category Name" value="<%= category.name%>" />

  <button type="submit" class="btn">Update</button>
</form>