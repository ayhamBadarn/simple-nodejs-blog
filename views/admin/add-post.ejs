<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form method="post">

  <label for="title"><b>Title</b></label>
  <input type="text" id="title" name="title" placeholder="Post Title" />

  <label for="category"><b>Category</b></label>
  <select id="category" name="category">
    <option disabled selected>Choise Category</option>
    <%category.forEach((cate)=> {%>
      <option value="<%=cate._id%>">
        <%= cate.name%>
      </option>
      <%})%>
  </select>

  <label for="body"><b>Content</b></label>
  <textarea id="body" name="body" cols="50" rows="10"></textarea>

  <button type="submit" class="btn">Add</button>
</form>